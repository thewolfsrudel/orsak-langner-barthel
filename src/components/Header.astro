---
const portalLink = "https://orsakcpas.clientportal.com";
---

<header>
	<div>
		<img src="/logo.png" />
		<div id="title">
			<h1>Orsak Langner & Barthel PLLC</h1>
			<h3>CERTIFIED PUBLIC ACCOUNTANTS</h3>
		</div>
	</div>
	<a href="https://orsakcpas.clientportal.com">Portal Login</a>
</header>
<style lang="scss">
	header {
		display: flex;
		justify-content: space-between;
		padding: 8px 10px;
		div {
			display: flex;
			align-content: center;
			img {
				width: 100pt;
				height: 100pt;
			}
			#title {
				display: inline-block;
				text-align: right;
				h1 {
					color: #3072c8;
				}
				h3 {
					color: #25589b;
				}
			}
		}
		a {
			display: inline-block;
			background-color: #aec9ec;
			border-radius: 5px;
			transition-duration: 0.3s;
			align-self: center;
		}
		a:hover {
			background-color: white;
		}
	}
</style>
